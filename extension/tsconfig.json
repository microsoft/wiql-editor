{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "noUnusedParameters": true,
        "noImplicitThis": true,
        "pretty": true,
        "noUnusedLocals": true,
        "jsx": "react",
        "sourceMap": true,
        "strictNullChecks": true,
        "rootDir": "scripts",
        "lib": [
            "es2015.promise",
            "dom",
            "es5"
        ]
    },
    "exclude": ["node_modules", "typings"]
}