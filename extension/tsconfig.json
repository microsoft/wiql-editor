{
    "compilerOptions": {
        "module": "amd",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "jsx": "react",
        "sourceMap": true,
        "strictNullChecks": false,
        "rootDir": "scripts/",
        "outDir": "dist/",
        "skipLibCheck": true,
       "lib": [
          "es5",
          "es6",
          "dom",
          "es2015.promise",
        ],
         "types": [
            "react",
            "react-dom",
            "vss-web-extension-sdk",
            "monaco-editor",
        ],
        "esModuleInterop": true
    },
    "include": ["scripts/**/*"],
    "exclude": ["node_modules", "**/node_modules/**", "typings"]
}